datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  email     String   @unique
  name      String?
  role      String   @default("USER")
}
enum Gender {
  Male
  Female
}
model Patient {
  id               String  @id @default(auto()) @map("_id") @db.ObjectId
  firstName        String
  lastName         String
  dob              DateTime
  gender           Gender
  email            String  @unique
  phone            Int     @unique
  street           String
  city            String
  zip             Int
  age             Int
  weight          Float
  height          Float

  pregnancy       String?
  allergies       String[]
  renalFunction   String?
  liverFunction   String?

  bloodPressure   String?
  heartRate       String?
  respiratoryRate String?
  temperature     String?
  oxygenSaturation String?
  // mrn            String? 
  painScale      String?
  status         Medication_Status

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  medications     Medication[] @relation("PatientToMedication")
}
enum Medication_Status {
  medication_not_set
  pending
  finished
  overDue
}
model Medication {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  dosage       String
  route        String
  frequency    String
  indication   String
  prescribedBy String
  patientId    String  @db.ObjectId
  patient      Patient @relation("PatientToMedication", fields: [patientId], references: [id])
}
